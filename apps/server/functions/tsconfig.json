{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "root/*": [
        "./src/*"
      ],
      "infra/*": [
        "./src/packages/infra/*"
      ],
      "domain/*": [
        "./src/packages/domain/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
